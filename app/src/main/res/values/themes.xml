<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Manga_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="colorControlActivated">@color/redish</item>
        <item name="android:textColorHighlight">@color/redish30</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="Theme.Manga_App" parent="Base.Theme.Manga_App">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="BotNavViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextColor">@color/bot_nav_view</item>
        <item name="itemIconTint">@color/bot_nav_view</item>
        <item name="android:background">@drawable/panel_grad_border</item>
    </style>
    <style name="BotNavView_CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/redish30</item>
    </style>
    <style name="PanelGradBorder">
        <item name="android:background">@drawable/panel_grad_border</item>
        <item name="android:padding">48dp</item>
    </style>
    <style name="SplashScreen">
        <item name="srcCompat">@drawable/logo_vertical</item>
    </style>
    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ButtonCustom" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/redish</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:insetTop">0px</item>
        <item name="android:insetBottom">0px</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ClickableTextView">
        <item name="android:textColor">@color/redish</item>
    </style>
    <style name="topBar">
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="topBarImage">
        <item name="srcCompat">@drawable/lab_manager_logo_horizontal_dark</item>
    </style>
    <style name="topBarBtn">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="equipmentDeviceCard">
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:padding">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="equipmentDeviceCardVolume">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="equipmentDeviceCardVolumeBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>
    <style name="equipmentDeviceCardVolumeValue">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="equipmentDeviceCardText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="iconTint">
        <item name="tint">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
</resources>